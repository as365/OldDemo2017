<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zftbackround"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#37BC38"
        android:focusable="false"
        android:gravity="center"
        android:text="人员信息"
        android:textColor="#CDEBCC"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#28B01D"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/per_person_img"
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/per_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="张三"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/per_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="天津市农业科学院"
            android:textColor="@color/white"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/per_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="24sp" />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
       

            <TextView
                android:id="@+id/per_txt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:text="执法证号:"
                android:textColor="@color/white"
                android:textSize="24sp" 
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/per_cardnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="213754374373"
                android:textColor="@color/white"
                android:textSize="24sp" 
                android:layout_toRightOf="@+id/per_txt_num"
                />

            <TextView
                android:id="@+id/per_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="证件有效期:"
                android:textColor="@color/white"
                android:textSize="24sp" 
                android:layout_toLeftOf="@+id/per_carddate"
                />

            <TextView
                android:id="@+id/per_carddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="70dp"
                android:text="2016-05-08至2017-05-08"
                android:textColor="@color/white"
                android:textSize="24sp" 
                 android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text="证件照片"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/per_zf_img"
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>