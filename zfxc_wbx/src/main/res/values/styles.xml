<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.Light">
		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="tab_style">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:button">@null</item>
		<!-- 上面这一句可以把radiobutton的图标去掉 -->
		<item name="android:gravity">center_horizontal|bottom</item>
		<item name="android:layout_gravity">bottom</item>
		<item name="android:background">@drawable/tab_bg_selector</item>
		<item name="android:textSize">17sp</item>	
			<item name="android:textColor">#ffffffff</item>	
	</style>
 <style name="textview_style">
          <item name="android:textColor">#ffffffff</item>
            <item name="android:textStyle">bold</item>
        
    </style>
    
 
   
    <style name="IMTheme.Basic" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="IMTheme.Transparent" parent="@style/IMTheme.Basic">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
   
 
</resources>