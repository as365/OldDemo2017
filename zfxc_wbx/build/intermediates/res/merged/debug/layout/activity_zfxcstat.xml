<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zftbackround"
    tools:context=".ZFXCSTATActivity" 
    android:orientation="vertical"
    >
<TextView 
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="执法轨迹"
        android:textSize="28sp"
        android:gravity="center"
        android:focusable="false"
        android:textColor="#CDEBCC"
        android:background="#37BC38"
        />
    <LinearLayout
        android:id="@+id/textinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" 
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textViewddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始日期:" 
                android:textSize="20sp"
                >
            </TextView>

            <EditText
                android:id="@+id/etstartddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false" >
            </EditText>

            <Button
                android:id="@+id/ButtonSetstartDate"
                android:layout_width="47dp"
                android:layout_height="34dp"
                android:text="∨"
                android:textColor="#fff" >

                <requestFocus />
            </Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="终止日期:"
                android:textSize="20sp"
                 >
            </TextView>

            <EditText
                android:id="@+id/etendddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false" >
            </EditText>

            <Button
                android:id="@+id/ButtonSetEndDate"
                android:layout_width="47dp"
                android:layout_height="34dp"
                android:layout_x="266dp"
                android:layout_y="238dp"
                android:text="∨"
                android:textColor="#fff" >

                <requestFocus />
            </Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnsearch"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="19dp"
                android:text="查询巡检记录" 
                android:textColor="#348ADF"
                android:background="@drawable/shap_statistic"
                />

            <Button
                android:id="@+id/btnshow"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="19dp"
                android:text="显示位置" 
                android:textColor="#348ADF"
                android:background="@drawable/shap_statistic"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/statlv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
		<com.zfxc.pulltorefesh.XListView
        android:id="@+id/statis_pull_refresh_list"
        android:layout_width="match_parent"
        android:layout_height="600dp"
         />
            
        </LinearLayout>
        <com.baidu.mapapi.map.MapView
                android:id="@+id/id_bmapView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true" />
    </LinearLayout>

</LinearLayout>