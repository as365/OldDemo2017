<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="75dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务状态:"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/darkgray"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务内容:"
            android:textSize="18sp"
            android:textColor="@color/darkgray"
            android:layout_marginTop="5dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间:"
            android:textSize="18sp"
            android:textColor="@color/darkgray"
            android:layout_marginTop="5dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执  行  人:"
            android:textSize="18sp"
            android:textColor="@color/darkgray"
            android:layout_marginTop="5dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员类型:"
            android:textSize="18sp"
            android:textColor="@color/darkgray"
            android:layout_marginTop="5dp"
            />
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务附件:"
            android:textSize="18sp"
            android:textColor="@color/darkgray"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
       <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
        <TextView 
            android:id="@+id/child_mstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            />
        <TextView 
            android:id="@+id/child_mcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            />
        <TextView 
            android:id="@+id/child_mdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            />
        <TextView 
            android:id="@+id/child_muser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/child_mtype" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            />
        <TextView 
            android:id="@+id/child_mcontent_filde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
        
        <Button 
            android:id="@+id/child_mcontent_show"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="查看附件"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shap_zfshowbt"
            android:textColor="@color/orangered"
            />
        

</LinearLayout>
